
<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h2 class="text-center">Controle de Horas</h2>
            </div>
            <div class="modal-body text-center">
                <form class="form col-md-12 center-block" method="post" action=@Url.Action("/Signin")>
                    
                        <div class="form-group">
                            <input id="login" name="login" type="text" class="form-control input-lg" placeholder="Login">
                        </div>

                    <div class="form-group">
                        <input id="senha" name="senha" type="password" class="form-control input-lg" placeholder="Password">
                    </div>
                        
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Sign In</button>
                    </div>

                    @if (ViewBag.loginErr != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.loginErr
                        </div>
                    }
                </form>
               
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

