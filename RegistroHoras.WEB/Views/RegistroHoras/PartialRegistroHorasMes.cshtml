@model List<RegistroHoras.DATA.RegistroHoras>
@{
    TimeSpan horasMes = new TimeSpan();
    Double percent = 0;
    string percentual = "";
    if (Model.Count > 0)
    {
         horasMes = new RegistroHoras.DATA.classes.business.RegistroHorasBO().TotalHorasMes(int.Parse(User.Identity.Name), Model[0].entrada.Month);
         percent = Math.Round((Math.Round(horasMes.TotalHours, 2) / Model[0].FK_JornadaColaborador.FK_Colaborador.regimeMensal) * 100, 2);
         percentual = percent.ToString().Replace(',', '.') + "%";
        
    }
    
}

@using GridMvc.Html





@Html.Grid(Model.OrderBy(m=>m.entrada)).Columns(c =>
{
    c.Add(d => d.FK_JornadaColaborador.FK_Turno.descricao).Titled("Turno");
    c.Add(d => d.entrada).Titled("Entrada");
    c.Add().Encoded(false).Sanitized(false).RenderValueAs(d => @Saida(d.saida)).Titled("Saída");
    c.Add().Encoded(false).Sanitized(false).RenderValueAs(d => @saldoHoras(d)).Titled("Hora/Dia");
    c.Add(d => d.Observacao).Titled("Obs");
    c.Add().Encoded(false).Sanitized(false).RenderValueAs(d => @Html.ActionLink("excluir", "ExcluirRegistroHora", new { registroHora = d.registro, caminho = Request.Path}, new {@onclick="return Confirm('Deseja realmente excluir este registro?');" }));
}).EmptyText("Sem registro de horas para este mês.").WithPaging(41)

@if (horasMes > new TimeSpan(0))
{
    <p>Total de Horas: @Math.Round(horasMes.TotalHours,2) de @Model[0].FK_JornadaColaborador.FK_Colaborador.regimeMensal horas</p>
}


<div class="progress progress-striped active">
    <div class="progress-bar" style="width:@percentual">
        <span>@percentual</span>
    </div>
   
</div>

@helper saldoHoras(RegistroHoras.DATA.RegistroHoras registroHoras)
{
        TimeSpan res = registroHoras.saida.TimeOfDay - registroHoras.entrada.TimeOfDay;

      if(res > new TimeSpan(0,0,0))
      {
        <span class="text-info"><strong>@res</strong></span>
      }
}

@helper Saida(DateTime saida)
{
    if(saida > DateTime.Parse("1900-01-01"))
    {
        <span>@saida</span>    
        
    }
    
}

